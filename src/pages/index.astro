<style lang="scss">
	div {
		overflow: hidden;
		text-align: center;
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 64px;
		height: 100%;
		box-sizing: border-box;
		> h1 {
			color: transparent;
			background-clip: text;
			background-image: linear-gradient(45deg, #70c2e5, #81fa70);
			font-size: 60vh;
			letter-spacing: 0px;
			&[data-feat="fn"] {


				& > span {
					&, & > span {
						transition: all ease .75s;
					}
					display: block;
					width: 45vh;
					height: 45vh;
					border-radius: 50%;
					overflow: hidden;
					box-sizing: border-box;

					border-width: 7.5vh;
					border-color: transparent;
					border-style: solid;

					background-clip: border-box;
					background-image: linear-gradient(45deg, #70c2e5, #81fa70);
					background-size: 45vh 45vh;
  					background-position: -7.5vh;
					&:hover {
						transform: rotate(1turn);
						background-position: 0px;
						border-width: 0px;

						--hoverWidth: max(125vw, 145vh);

						width: var(--hoverWidth);
						height: var(--hoverWidth);
						background-size: var(--hoverWidth) var(--hoverWidth);
						> span {
							background-color: #eee;
						}
					}


					> span {
						display: block;
						width: 100%;
						height: 100%;
						background-color: #333;
					}
				}
			}
		}
	}
</style>